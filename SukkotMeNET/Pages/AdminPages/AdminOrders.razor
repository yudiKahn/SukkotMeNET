@page "/admin/orders"
@page "/admin/orders/{userId}"
@using SukkotMeNET.Interfaces
@using SukkotMeNET.Models
@using MongoDB.Bson
@using SukkotMeNET.Services
@inject AppStateService _State

<section class="py-1 bg-blueGray-50">
    <div class="w-full xl:w-8/12 mb-12 xl:mb-0 px-4 mx-auto mt-24">
        <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-lg rounded ">
            <div class="rounded-t mb-0 px-4 py-3 border-0">
                <div class="flex flex-wrap items-center">
                    <div class="relative w-full px-4 max-w-full flex-grow flex-1">
                        <h3 class="font-semibold text-base text-blueGray-700">Orders</h3>
                    </div>
                </div>
            </div>

            <div class="block w-full overflow-x-auto">
                <table class="items-center bg-transparent w-full border-collapse ">
                    <thead>
                        <tr>
                            <th class="px-6 bg-blueGray-50 text-blueGray-500 align-middle border border-solid border-blueGray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
                                Date
                            </th>
                            <th class="px-6 bg-blueGray-50 text-blueGray-500 align-middle border border-solid border-blueGray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
                                User
                            </th>
                            <th class="px-6 bg-blueGray-50 text-blueGray-500 align-middle border border-solid border-blueGray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
                                View
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var order in _State.AdminState.AllOrders.OrderByDescending(o => o.CreatedAt))
                        {
                            @if (string.IsNullOrEmpty(UserId) || order.UserId == UserId)
                            {
                                <tr>
                                    <th class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4 text-left text-blueGray-700">
                                        @(order.CreatedAt == default ? "--" : order.CreatedAt.ToString("dd MMM yyyy hh:mm"))
                                    </th>
                                    <td class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4">
                                        @_State.AdminState.AllUsers.FirstOrDefault(u => u.Id == order.UserId)
                                    </td>
                                    <td class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4">
                                        <NavLink href=@string.Format($"/admin/order/{order.Id}")>
                                            <i class="fa fa-external-link"></i>
                                        </NavLink>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="w-full px-6 py-2 relative" colspan="3">
                                        <button @onclick="() => SendInvoice(order)" class="bg-green-600 hover:bg-green-700 text-white font-bold text-sm py-1 px-2 rounded-full">
                                            Send Invoice
                                        </button>

                                        <button class="mt-1 bg-green-600 hover:bg-green-700 text-white font-bold text-sm py-1 px-2 rounded-full">
                                            Payment reminder
                                        </button>

                                        <button @onclick="() => ToggleOrderStatus(order, nameof(Order.IsPacked))"
                                                disabled=@_IsUpdatingStatus
                                                class=@_BtnsClass>
                                            <i class=@string.Format("fa fa-{0}", order.IsPacked ? "check" : "times")></i>
                                            Packed
                                        </button>

                                        <button @onclick="() => ToggleOrderStatus(order, nameof(Order.IsShipped))"
                                                disabled=@_IsUpdatingStatus
                                                class=@_BtnsClass>
                                            <i class=@string.Format("fa fa-{0}", order.IsShipped ? "check" : "times")></i>
                                            Shipped
                                        </button>

                                        <button @onclick="() => ToggleOrderStatus(order, nameof(Order.IsPaid))"
                                                disabled=@_IsUpdatingStatus
                                                class=@_BtnsClass>
                                            <i class=@string.Format("fa fa-{0}", order.IsPaid ? "check" : "times")></i>
                                            Paid
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public string? UserId { get; set; }
    [Inject] IJSRuntime _Js { get; set; }
    [Inject] MainStateService Service { get; set; }

    bool _IsUpdatingStatus;
    string _BtnsClass = "mt-1 bg-green-600 hover:bg-green-700 text-white font-bold text-sm py-1 px-2 rounded-full";

    async void SendInvoice(Order order)
    {
        var user = _State.AdminState.AllUsers.FirstOrDefault(u => u.Id == order.UserId);

        if (user != null && await _Js.InvokeAsync<bool>(Constants.JavaScriptFunctions.Confirm, $"To send invoice to {user.Email}?"))
        {
            var didSend = await Service.SendInvoiceFromAdminAsync(order,user);
        }
    }
    
    protected override void OnInitialized()
    {
        Service.StateHasChanged += (e, s) => InvokeAsync(StateHasChanged);
    }

    async void ToggleOrderStatus(Order order, string prop)
    {
        _IsUpdatingStatus = true;
        _BtnsClass = "opacity-75 mt-1 bg-green-600 hover:bg-green-700 text-white font-bold text-sm py-1 px-2 rounded-full";
        await Service.ToggleOrderStatus(order, prop);
        _IsUpdatingStatus = false;
        _BtnsClass = "mt-1 bg-green-600 hover:bg-green-700 text-white font-bold text-sm py-1 px-2 rounded-full";

        StateHasChanged();
    }
}
