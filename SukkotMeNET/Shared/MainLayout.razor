@inherits LayoutComponentBase

<MudThemeProvider Theme="@_customTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>SukkotMeNET</PageTitle>

<MudLayout>
    <MudAppBar Style="background-color:transparent; box-shadow:none;">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Success" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudNavLink Href="/login" Match="NavLinkMatch.Prefix" Style="width:fit-content;">
            <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Success" Edge="Edge.Start"/>
        </MudNavLink>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">
                <MudText Color="Color.Success">Home</MudText>
            </MudNavLink>
            <MudNavLink Href="/users" Match="NavLinkMatch.Prefix">Users</MudNavLink>
            <MudNavLink Href="/about" Match="NavLinkMatch.Prefix">About</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    MudTheme _customTheme = new()
        {
            Palette = new Palette()
            {
                Success = "#059669",
            },
        };

    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}