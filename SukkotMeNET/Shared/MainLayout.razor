@inherits LayoutComponentBase

<MudThemeProvider Theme="@_customTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>SukkotMeNET</PageTitle>

<MudLayout>
    <MudAppBar Style="background-color:transparent; box-shadow:none;">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Success" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    MudTheme _customTheme = new()
    {
        Palette = new Palette()
        {
            Success = "#059669"
        },
        Typography = new Typography()
        {
            Default = new Default()
            {
                //FontFamily = new[] {"ui-monospace","SFMono-Regular","Consolas","Liberation Mono","Menlo","monospace"}
            }
        }
    };

    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}